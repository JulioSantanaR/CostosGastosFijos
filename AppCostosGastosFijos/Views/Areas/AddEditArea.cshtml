@using Data.Models
@{
    int? areaId = ViewBag.areaId != null ? (int?)ViewBag.areaId : null;
    bool existingArea = areaId.HasValue && areaId.Value > 0;
    AreaData areaInformation = ViewBag.areaInformation != null ? (AreaData)ViewBag.areaInformation : new AreaData();
    string modalTitle = existingArea ? "Editar área" : "Nueva área";
    string btnTitle = existingArea ? "Editar" : "Guardar";
}

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">@modalTitle</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form id="areaForm">
                <input type="hidden" id="areaId" value="@areaInformation.AreaId" />
                <div class="mb-3 row">
                    <label for="nameArea" class="col-sm-2 col-form-label">*Nombre</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="nameArea" name="nameArea" value="@areaInformation.NameArea" required>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            <button type="button" class="btn btn-primary saveArea">@btnTitle</button>
        </div>
    </div>
</div>